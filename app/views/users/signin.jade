extends auth

block auth
  form.signin.form-horizontal(action="/users/session", method="post")
    h2 Sign In
    p.notice
      a.button-lift-ltgreen.deviantart(href='/auth/deviantart')
        i.icon-deviantart  
        | Sign in with deviantART
      |  OR 
      a.button-lift-ltgreen.github(href='/auth/github')
        i.icon-octocat  
        | Sign in with GitHub

    .form-group
      label.col-md-4.control-label(for='email') Email
      .col-md-8
        input#email.form-control(type='email', name="email", placeholder='Email', required)

    .form-group
      label.col-md-4.control-label(for='password') Password
      .col-md-8
        input#password.form-control(type='password', name="password", placeholder='Password', required)

    .form-group
      .col-md-offset-4.col-md-8
        br
        button.btn.btn-primary(type='submit') Sign in
        a.show-signup(href="/signup" class="right")
          br
          br
          | or Sign up
